<Window x:Class="BeveragePairer.DishViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeveragePairer"
        mc:Ignorable="d"
        Title="DishViewer" Height="450" Width="800">
    <Grid Margin="0,0,0,61">
        <ListView x:Name="dishLv" ItemsSource="{Binding DishList}" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        <Button x:Name="selectBtn" Content="Select" HorizontalAlignment="Left" Height="30" Margin="372,359,0,-31" VerticalAlignment="Top" Width="75" Click="SelectBtn_Click"/>
    </Grid>
</Window>
